---
const { title = 'Pankaj Misra — Author & Strategist', description = 'Books • Articles • Speaking • Advisory' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/src/styles.css" />
  </head>
  <body>
    <header class="sticky top-0 z-50 backdrop-blur bg-white/90 border-b">
      <nav class="max-w-5xl mx-auto px-4 py-3 flex items-center justify-between">
        <a href="/" class="font-extrabold"><span class="text-indigo">Pankaj</span> <span style="color:#C9A227">Misra</span></a>
        <ul class="flex gap-4 font-semibold">
          <li><a href="/books">Books</a></li>
          <li><a href="/articles">Articles</a></li>
          <li><a href="/about">About</a></li>
          <li><a class="px-3 py-1 rounded-lg bg-indigo text-white" href="/speaking">Speaking</a></li>
        </ul>
      </nav>
    </header>
    <main class="min-h-[60vh]">
      <slot />
    </main>
    <footer class="mt-16 bg-[color:#0b0d16] text-gray-300">
      <div class="max-w-5xl mx-auto px-4 py-10 grid md:grid-cols-3 gap-6">
        <div>
          <div class="font-extrabold"><span class="text-indigo">Pankaj</span> <span style="color:#C9A227">Misra</span></div>
          <p class="text-sm mt-2">© {new Date().getFullYear()} Pankaj Misra. Books published by <a class="underline" href="https://himantrix.com" target="_blank">HiMantrix</a>.</p>
        </div>
        <div>
          <strong>Explore</strong>
          <ul class="space-y-1 mt-2 text-sm">
            <li><a href="/books">Books</a></li>
            <li><a href="/articles">Articles</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/speaking">Speaking</a></li>
          </ul>
        </div>
        <div>
          <strong>Connect</strong>
          <ul class="space-y-1 mt-2 text-sm">
            <li><a href="/#contact">Contact</a></li>
            <li><a href="/#newsletter">Newsletter</a></li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>
