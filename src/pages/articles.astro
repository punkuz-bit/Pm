---
import Base from "../layouts/Base.astro";

type Post = {
  url: string;
  frontmatter: {
    title: string;
    description?: string;
    date?: string;
    tags?: string[];
    linkedin?: string;
    thumb?: string;     // NEW
  }
};

const modules = import.meta.glob('../../content/articles/*.mdx', { eager: true }) as Record<string, Post>;

const posts = Object.entries(modules)
  .map(([path, mod]) => {
    const slug = path.split('/').pop()?.replace('.mdx','') || '';
    const fm = mod.frontmatter ?? {};
    return {
      slug,
      title: fm.title,
      description: fm.description ?? '',
      date: fm.date ?? '',
      tags: fm.tags ?? [],
      linkedin: (fm as any).linkedin ?? '',
      thumb: (fm as any).thumb ?? ''     // NEW
    };
  })
  .sort((a,b) => (b.date ?? '').localeCompare(a.date ?? ''));
---

<Base>
  <style>
  /* Card and thumbnail styling */
  .card {
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 14px;
    backdrop-filter: blur(6px);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 16px rgba(201, 162, 39, 0.2);
  }

  /* Thumbnail container */
  .thumb-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 180px;
    background: #0b0d16;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Uniform image size, contained instead of cropped */
  .thumb {
    width: 100%;
    height: 100%;
    object-fit: contain;            /* ðŸ‘ˆ ensures full image visible */
    background-color: #0b0d16;      /* fallback behind transparent PNGs */
    border: 1px solid rgba(201, 162, 39, 0.25); /* subtle gold border */
    box-shadow: 0 0 8px rgba(201, 162, 39, 0.15); /* soft golden glow */
    border-radius: 12px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .thumb:hover {
    box-shadow: 0 0 14px rgba(201, 162, 39, 0.35);
    transform: scale(1.02);
  }

  @media (min-width: 640px) {
    .thumb-wrap {
      height: 160px;
    }
  }
</style>


  <div class="max-w-5xl mx-auto px-4 py-10">
    <h2 class="text-3xl font-bold mb-2">Professional Articles</h2>
    <p class="text-gray-600 mb-6">Published on LinkedIn with on-site previews.</p>

    <div class="grid sm:grid-cols-2 gap-6">
      {posts.map(p => (
        <article class="card p-0 overflow-hidden" key={p.slug}>
          <div class="thumb-wrap">
            {p.thumb
              ? <img class="thumb" src={p.thumb} alt={p.title} />
              : <div class="thumb" style="background:
                    linear-gradient(180deg,#0b0d16,#111315);
                    position:relative;">
                  <span style="position:absolute;left:12px;bottom:10px;color:#C9A227;font-weight:800;">Pankaj Misra</span>
                </div>}
          </div>

          <div class="p-4">
            <h3 class="text-lg font-semibold"><a href={`/articles/${p.slug}`}>{p.title}</a></h3>
            <div class="text-xs text-gray-500 mt-1">{p.date}</div>
            <p class="text-gray-700 mt-2">{p.description}</p>

            <div class="mt-3 flex gap-3 flex-wrap">
              <a class="text-indigo underline" href={`/articles/${p.slug}`}>Open preview â†’</a>
              {p.linkedin && <a class="text-indigo underline" href={p.linkedin} target="_blank" rel="noopener">Read on LinkedIn â†’</a>}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Base>
