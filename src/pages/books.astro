---
import Base from "../layouts/Base.astro";

type Book = {
  url: string;
  frontmatter: {
    title: string;
    description?: string;
    cover?: string;
    date?: string;
    tags?: string[];
    buy?: string;
  }
};

const modules = import.meta.glob('../../content/books/*.mdx', { eager: true }) as Record<string, Book>;

const books = Object.entries(modules)
  .map(([path, mod]) => {
    const slug = path.split('/').pop()?.replace('.mdx','') || '';
    const fm = mod.frontmatter || {};
    return {
      slug,
      title: fm.title,
      description: fm.description ?? '',
      cover: fm.cover ?? '',
      date: fm.date ?? '',
      tags: fm.tags ?? [],
      buy: fm.buy ?? ''
    };
  })
  .sort((a,b)=> (b.date ?? '').localeCompare(a.date ?? ''));
---

<Base>
  <style>
    .badge{display:inline-flex;align-items:center;gap:.35rem;padding:.25rem .55rem;border:1px solid #e5e7eb;border-radius:999px;font-size:.75rem;color:#1a237e;background:#fff}
  </style>

  <div class="max-w-5xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-2">Books</h1>
    <p class="text-gray-600 mb-6">Explore current and upcoming titles.</p>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-5">
      {books.map(b => (
        <article class="card overflow-hidden flex flex-col" key={b.slug}>
          {b.cover
  ? <div class="w-full h-56 bg-black/40 flex items-center justify-center rounded">
      <img src={b.cover} alt={b.title} class="max-h-56 w-auto object-contain p-2" />
    </div>
  : <div class="w-full h-56 bg-gray-200 rounded" />
}

          <div class="p-4 flex-1 flex flex-col">
            <h2 class="font-semibold text-lg">{b.title}</h2>
            <p class="text-gray-200 text-sm mt-1 line-clamp-3">{b.description}</p>

            <div class="mt-auto pt-3 flex gap-2 flex-wrap items-center">
              <a class="btn btn-primary" href={`/books/${b.slug}`}>View details â†’</a>
              {b.buy
                ? <a class="btn btn-outline" href={b.buy} target="_blank" rel="noopener">Buy</a>
                : <span class="badge">Coming soon</span>
              }
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Base>
