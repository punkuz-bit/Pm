---
import Base from "../layouts/Base.astro";
---
<Base>
  <div class="max-w-5xl mx-auto px-4 py-10">
    <h2 class="text-3xl font-bold mb-2">Speaking & Advisory</h2>
    <div class="grid md:grid-cols-3 gap-4">
      <div class="card p-4">
        <h3 class="font-semibold text-lg">Topics</h3>
        <ul class="list-disc pl-6 text-sm mt-2 space-y-1">
          <li>AI Operating Models for Community & Regional Banks</li>
          <li>Data Quality, Governance & Risk in AI</li>
          <li>Legacy to Platform Modernization</li>
        </ul>
      </div>
      <div class="card p-4">
        <h3 class="font-semibold text-lg">Formats</h3>
        <ul class="list-disc pl-6 text-sm mt-2 space-y-1">
          <li>Keynote</li>
          <li>Executive Roundtable</li>
          <li>Half-day Workshop</li>
          <li>Advisory Retainers</li>
        </ul>
      </div>
      <div class="card p-4">
        <h3 class="font-semibold text-lg">Media Kit</h3>
        <a class="btn btn-outline" href="/Media_Kit_Pankaj_Misra.pdf">Media Kit (PDF)</a>
        <a class="btn btn-outline" href="/Work_With_Me_Pankaj_Misra.pdf">Work With Me</a>
      </div>
    </div>
  </div>
</Base>
